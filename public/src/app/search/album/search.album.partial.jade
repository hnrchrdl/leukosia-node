.album-container
  .leftside
    .albumart(albumart, album="album.Title")
      .album {{album.title}}
  .rightside
    .header
      .album {{album.Title}}
      .artist {{album.Artist}}
      .releasedate {{album.Year}}
    .button-wrapper.left()
      .button.text.addall(title="add album to queue", ng-click="mainCtrl.cmd.addAllFromAlbums(album)")
        i.fa.fa-plus
        |  add all
      .button.text.playall(title="play album and replace queue", ng-click="mainCtrl.cmd.playAllFromAlbums(album)")
        i.fa.fa-play
        |  play all
    .clear

    .song(ng-repeat="song in album.songs")
      .button-wrapper.left
        .button.add(title="add to queue", ng-click="mainCtrl.cmd.addSongs(song)")
          i.fa.fa-plus
      .attr.muted.track {{song.Track}}
      .attr {{song.Title}}
      .attr.muted {{song.Time | time}}
    .clear
