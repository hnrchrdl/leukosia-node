div save queue as new playlist
  hr
  div
    input#save-playlist(
          type='text',
          placeholder='name',
          ng-model='queueCtrl.newplaylistname'
    )
  .button-wrapper
    .button.text.cancel(ng-click='queueCtrl.dialogs.hideAll()')
      i.fa.fa-close
      |  cancel
    .button.text.ok(ng-click='queueCtrl.dialogs.hideAll()', mpd, cmd="savePlaylist", args="queueCtrl.newplaylistname")
      i.fa.fa-check
      |  ok