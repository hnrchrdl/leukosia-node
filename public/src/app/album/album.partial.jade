#album
  .scrollable
    .container-fluid
      .row
        .col-sm-3.col-sm-offset-2.col-xs-12
          img.img-responsive(albumart, artist="album[0].Artist", album="album[0].Album", size="3")
        .col-sm-7.col-xs-12
          .btn-group.pull-right
            button.btn.btn-minimal(title="add album to queue", ng-click="mainCtrl.cmd.addSongs(album)")
              i.fa.fa-plus
              |  add all
            button.btn.btn-minimal(title="play album and replace queue", ng-click="mainCtrl.cmd.playSongs(album)")
              i.fa.fa-play
              |  play all
          h4 {{album[0].Album}}
          h5 {{album[0].Artist}}
          h6 {{album[0].Date}}
          .song(ng-repeat="song in album")
            .row
              .col-xs-1
                button.btn.btn-xs.btn-minimal(title="add to queue", ng-click="mainCtrl.cmd.addSongs(song)")
                  i.fa.fa-plus
              .col-xs-1
                span.muted {{song.Track}}
              .col-xs-6
                span {{song.Title}}
              .col-xs-4
                span.muted {{song.Time | time}}
            
              
            
