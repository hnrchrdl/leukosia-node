#browse
  .dir-info
    if url_array
      .attr
        a.browse-breadcrumb(href="#", data-dir="#") root
      - each url, i in url_array
        .attr /
        .attr
          a.browse-breadcrumb(href="#", data-dir= i)= url
    else
      .attr /
  .button-wrapper.right
    .button.browse-update-database.text(title="update database")
      i.fa.fa-refresh

  .clear
  hr
  .scrollable
    if dirs != []
      - each item in dirs
        .dir(data-directory= item.directory)
          .attr 
            a.browse-dir(href="#", data-dir= item.directory)
              i.fa.fa-folder-o  
          .attr= item.name
          .button-wrapper.right
            .button.browse-append(title="add folder to current playlist")
              i.fa.fa-plus-square
            .button.browse-load(title="replace current playlist with folder")
              i.fa.fa-asterisk
    if files != []
      - each item in files
        .dir(data-directory= item.file)
          .attr
            i.fa.fa-file-o  
          .attr
            span= item.name
          .button-wrapper.right
            .button.browse-append(title="add song to current playlist")
              i.fa.fa-plus-square-o