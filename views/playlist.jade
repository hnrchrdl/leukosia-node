#playlist-container
  .nav-main
    .button-wrapper.left
      .button.text.refresh
        i.fa.fa-refresh
      .button.text.scroll
        i.fa.fa-angle-down
    .button-wrapper.right
      .button.text.manage
        i.fa.fa-folder-open-o
      .button.text.clear
        i.fa.fa-trash-o
  #playlist.scrollable
    - each song in playlist
      .song(class= song.Id, data-id= song.Id)
        .attr.songpos= song.Pos
        .attr.artist <a href="">#{song.Artist || 'unknown'}</a>
        .attr.title #{song.Title || 'unknown'}
        .attr.space
        if song.Album
          .attr.album #{song.Album}
          if song.Date
            |  (#{song.Date})
          .attr.space
        if song.Genre
          .attr.genre #{song.Genre}
          .attr.space
        - var time = secondsToTimeString(song.Time)
        .attr.time #{time}
        .button-wrapper.right
          .button.misc
            i.fa.fa-ellipsis-v
        .button-wrapper.right
          .button.play
            i.fa.fa-play