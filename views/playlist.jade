.panel.panel-default
	<!-- Default panel contents -->

	.panel-body
		#controls-playlist
			.control#refreshplaylist
				span.glyphicon.glyphicon-refresh
			.control.empty
			.control#scrolltocurrentsong
				span.glyphicon.glyphicon-hand-down
			.control#scrolltotop
				span.glyphicon.glyphicon-hand-up
			.control#saveplaylist.pull-right
				span.glyphicon.glyphicon-trash
			.control.empty.pull-right
			.control#loadplaylist.pull-right
				span.glyphicon.glyphicon-folder-open
			.control#spl.pull-right(data-toggle='popover')
				span.glyphicon.glyphicon-floppy-disk
		<!-- Table -->
		.scrollable
			table.table
				tr
					each column in columns
						th #{column}
				- each song in playlist
					tr.playlistrow(id= 'playlistrow-' + song.Id)
						each column in columns
							td(class= column) #{song[column]}
		
		#playlistloadmodal.modal.fade
			.modal-dialog.modal-lg
				.modal-content
					.modal-header
						button(type="button", class="close", data-dismiss="modal")
							span(aria-hidden="true") &times;
								span(class="sr-only") Close
						h4.modal-title Load Playlist
					#playlistloadcontent.modal-body
						.radio
							label
								input(type='radio', name='radio1', value='append' checked) 
								| append to current playlist
						.radio
							label
								input(type='radio', name='radio1', value='replace')
								| replace current playlist
						ul.list-inline