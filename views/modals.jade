.modal.fade#add-to-playlist-modal(role="dialog", aria-hidden="true")
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true")&times;
        h4.modal-title#myModalLabel Add selected songs to playlist?
      .modal-body
        select.form-control.light(ng-model="playlistname")
          option(ng-repeat="playlist in playlists", value="{{playlist.playlist}}") 
            |  {{playlist.playlist}}
      .modal-footer
        button.btn.btn-default.btn-minimal(type="button", data-dismiss="modal") Cancel
        button.btn.btn-default.btn-ok(mpd, cmd="addSongsToPlaylist", args="[playlistname, selected]", type="button", data-dismiss="modal") OK



