doctype html
html(lang='en')

  include ./head.jade
  
  body
    header
            
    .login
      h1 turbosloth
      <br>
      form#login(action="/login", method="post")
        h4 MPD
        input(name='mpd[host]', type="text", placeholder="mympdurl.com", value="") 
        <br>
        input(name='mpd[port]', type="text", placeholder="6600", value="")
        <br>
        input(name='mpd[password]', type="password", placeholder="mpd password", value="")
        <br>
        h4 STREAM
        input(name='streamurl', type="text", placeholder="http://url.to.stream/from", value="")
        
        <br>
        <br>
        .button-wrapper
          .button.text#enter(type='submit') S T A R T

    if config.appEnv === 'production'
      script(src='/dist/vendor.min.js', type='text/javascript')
    else
      script(src='/dist/vendor.min.js', type='text/javascript')



    // script for custom form posting
    script(type="text/javascript").
      
      $("#enter").on("click", function(){
        $('#login').submit();
      });