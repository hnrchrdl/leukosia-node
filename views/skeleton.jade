doctype html
html(lang='en')

  include ./head.jade
  if stream
    script(type="text/javascript").
      var stream = '#{stream}';
  else
    script(type="text/javascript").
      var stream = undefined;

  body
    #background-wrapper
      
      header
        h1 turbosloth
        #submenu
          .button-wrapper
            #settings.button.text
              i.fa.fa-cog
              |  Settings
            #logout.button.text
              i.fa.fa-sign-out
              |  Logout
        
      #left
        nav

          .button-wrapper.left
            .button.text.queue.active
              i.fa.fa-list
              |  Queue
          .clear
          .button-wrapper.left
            .button.text.playlists 
              i.fa.fa-file-audio-o
              |  Playlists
          .clear
          .button-wrapper.left
            .button.text.browse
              i.fa.fa-folder-o
              |  Browse
          .clear
          .button-wrapper.left
            .button.text.search
              i.fa.fa-search
              |  Search
          .clear
          //#player-options.button-wrapper.right
            //if !stream
              //#stream.left.button.text.disabled(title="no streaming source")
                //i.fa.fa-volume-up
            //else
              //#stream.left.button.text(title="streaming")
                //i.fa.fa-volume-up

      main
        block content

    //footer
    #footer
      #albumart
      #currentsong-wrapper
        #currentsong
 
      #control-menu.left
          .button-wrapper.left
            #previous.left.button(title="previous")
              i.fa.fa-backward
            #pause.left.button(title="pause")
              i.fa.fa-pause
            #play.left.button.active(title="play")
              i.fa.fa-play
            #stop.left.button(title="stop")
              i.fa.fa-stop
            #next.left.button(title="next")
              i.fa.fa-forward
      #seek-current 00:00:00
      #seek-bar-container  
        #seek-bar
      #seek-songtime 00:00:00

      #control-menu2.right
          .button-wrapper.left
            #stream.left.button(title="stream")
              i.fa.fa-volume-up
            #random.left.button(title="random")
              i.fa.fa-random
            #repeat.left.button(title="repeat")
              i.fa.fa-repeat

    #info-wrapper
      #info

      //| turbosloth v.0.1 | connected to #{mpdhost}:#{mpdport}
    
    audio(src= stream)

    include ./scripts.jade
    
