#options-queue.options-box
  .button-wrapper
    .button.text.playnext
      i.fa.fa-arrow-down
      |  play next
  .button-wrapper
    .button.text.addtoplaylist
      i.fa.fa-share
      |  add to playlist
  .button-wrapper
    .button.text.crop
      i.fa.fa-cut
      |  crop
    .button.text.remove
      i.fa.fa-remove
      |  remove
