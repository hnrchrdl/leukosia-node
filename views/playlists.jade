#playlists
  input#save-playlist.long(type='text',placeholder="save as new playlist")
  i.fa.fa-save
  .clear
  hr
  .scrollable
    - each playlist in playlists
      .playlist(data-playlist= playlist.playlist )
        .attr= playlist.playlist
        .attr.space
        span.muted
          .attr
            | songs: --num--
          .attr.space
          .attr
            | last modified: --date--
        .button-wrapper.right
          .button.playlist-append(title="add to current playlist")
            i.fa.fa-plus-square-o
          .button.playlist-load(title="replace current playlist")
            i.fa.fa-asterisk
          //.space
          //.attr.space
          .button.playlist-delete
            i.fa.fa-remove
