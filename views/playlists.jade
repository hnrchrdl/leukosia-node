#playlists
  input#save-playlist.long(type='text',placeholder="save as new playlist")
  i.fa.fa-save
  .nav-main
    .button-wrapper.right
      if order === 'lastmodified'
        .button.sort-by-name
          i.fa.fa-sort-alpha-asc
        .button.sort-by-date.active
          i.fa.fa-sort-amount-desc
      else
        .button.sort-by-name.active
          i.fa.fa-sort-alpha-asc
        .button.sort-by-date
          i.fa.fa-sort-amount-desc
  .clear
  hr.prime
  .scrollable
    - each playlist in playlists
      .item.leftclick(data-name= playlist.playlist)
        .attr= playlist.playlist
        span.muted
          .attr.right last modified: #{playlist.lastmodified}

  ///contextmenu
  .contextmenu.playlists
    .button-wrapper.left
      .button.left.text.add
        i.fa.fa-plus-square-o
        |  add to queue
    .clear
    .button-wrapper.left
      .button.left.text.load
        i.fa.fa-asterisk
        |  replace queue
    .clear
    hr
    .button-wrapper.left
      .button.left.text.delete
        i.fa.fa-remove
        |  delete

