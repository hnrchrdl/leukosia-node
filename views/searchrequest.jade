
#searchResults(ng-show="searchResultsAreShown()")
  if result
    -each artist, index in result
      .artist(data-artist= artist.name, 
          data-index= index, ng-class="{active: searchResultIsActive(" + index + ")}",
          ng-mouseenter="selectSearchRequest(" + index + ")")
        .name= artist.name
          .genres.muted=artist.genres
  else
    .error= 'no results'

